<section class='x-home-hero'>
  <div class='hero-background'>
    {% render 'image', image: section.settings.background %}
  </div>
  <div class='hero-overlay'>
    <div class='hero-tagline h5'>{{ section.settings.tagline }}</div>
  </div>
</section>

{% stylesheet %}
  .x-home-hero {
    position: relative;
    min-height: 50lvh;

    display: grid;
    grid-template-areas: 'a';
    font-weight: 500;

    & .hero-background {
      grid-area: a;

      & img {
        object-fit: stretch;
        height: 100%;
      }
    }

    & .hero-overlay {
      grid-area: a;

      padding: 16px;
      display: grid;

      & {
        grid-template-areas:
          '. . .'
          '. . tagline'
          '. . .';
        grid-template-columns: repeat(3, 1fr);
        grid-template-rows: repeat(3, 1fr);
      }
      @media (width < 768px) {
        grid-template-areas:
          '. .'
          '. tagline'
          '. .';
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: repeat(3, 1fr);
      }
      @media (width < 640px) {
        grid-template-areas:
          '.'
          'tagline'
          '.';
        grid-template-columns: repeat(1, 1fr);
        grid-template-rows: repeat(3, 1fr);
        text-align: center;
      }

      & .hero-tagline {
        grid-area: tagline;
        width: 100%;

        color: white;
        mix-blend-mode: difference;
      }
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Home Hero",
  "class": "slot",
  "settings": [
    {
      "type": "image_picker",
      "id": "background",
      "label": "Background"
    },
    {
      "type": "richtext",
      "id": "tagline",
      "label": "Tagline"
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "category": "Home"
    }
  ]
}
{% endschema %}
