{% style %}
  {% assign body_600 = settings.type_body_font | font_modify: 'weight', '600' %}
  {{ body_600 | font_face: font_display: 'swap' }}
  {% assign body_500 = settings.type_body_font | font_modify: 'weight', '500' %}
  {{ body_500 | font_face: font_display: 'swap' }}
  {% assign body_400 = settings.type_body_font | font_modify: 'weight', '400' %}
  {{ body_400 | font_face: font_display: 'swap' }}
{% endstyle %}

{% stylesheet %}
  @layer base {
    :root {
      font-synthesis: none;
    }
  }

  :root {
    --font-subheading--weight: 500;
    --font-accent--weight: 500;

    --font-h1--weight: 500;
    --font-h1--letter-spacing: -0.07em;
    --font-h1--line-height: 0.9;
    --font-h2--weight: 500;
    --font-h2--letter-spacing: -0.05em;
    --font-h2--line-height: 1;
    --font-h3--weight: 600;
    --font-h3--letter-spacing: -0.05em;
    --font-h3--line-height: 1;
    --font-h4--weight: 500;
    --font-h4--size: 1.25rem;
    --font-h4--letter-spacing: -0.05em;
    --font-h5--weight: 600;
    --font-h6--weight: 700;
  }

  @layer utilities {
    /* button */
    .hb {
      font-weight: 600;
      text-transform: uppercase;
    }
  }
{% endstylesheet %}
