<a
  class='x-brand-logo'
  href='{{ routes.root_url }}'
>
  {% render 'image', image: settings.logo, text_fallback: shop.name %}
</a>

{% stylesheet %}
  .x-brand-logo {
    display: flex;
    justify-content: center;

    & img {
      height: 100%;
      width: auto;
    }
  }
{% endstylesheet %}
