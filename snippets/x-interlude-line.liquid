{%- capture id -%}
  interlude-{{- 'now' | date: '%s' -}}
{%- endcapture -%}

<div
  class='x-interlude-line'
  data-follow-scroll
>
  <div class='interlude-line-bar'></div>
  <div class='interlude-line-container'>
    <a
      class='interlude-line-pill'
      href='#{{ id }}'
    >
      {% render 'x-button', text: text %}
    </a>
  </div>
  <div
    class='interlude-line-end'
    id='{{ id }}'
  ></div>
</div>

{% stylesheet %}
  .x-interlude-line {
    position: relative;

    display: flex;
    flex-direction: column;

    min-height: 66.67lvh;
    overflow: clip;

    background: var(--color-background);

    --progress: calc(var(--follow-scroll-y-out, 0));

    & .interlude-line-bar {
      position: absolute;
      inset-block: 0;
      left: 50%;
      width: 1px;
      translate: -50% 0;
      background: currentColor;
    }

    & .interlude-line-container {
      flex-grow: 1;

      position: relative;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 16px;

      translate: 0 calc(var(--progress) * 50%);

      & .interlude-line-pill {
        border-radius: 9999px;

        --color: var(--color-foreground);
        background: var(--color-background);
        outline: 16px solid var(--color-background);

        translate: 0 calc(var(--progress) * -50%);
      }
    }

    & .interlude-line-end {
      position: absolute;
      bottom: -1px;
    }
  }
{% endstylesheet %}
