{% capture description_a %}
  {% content_for 'block', type: 'x-separator-description', id: 'a' %}
{% endcapture %}

{% capture description_b %}
  {% content_for 'block', type: 'x-separator-description', id: 'b' %}
{% endcapture %}

{% assign title = title | default: block.settings.title %}
{% assign count = count | default: block.settings.count %}

{% render 'x-separator-heading',
  title: title,
  count: count,
  description_a: description_a,
  description_b: description_b
%}

{% schema %}
{
  "name": "Separator: Heading",
  "tag": "slot",
  "blocks": [
    {
      "type": "x-separator-description"
    }
  ],
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "Title",
      "default": "<p>Your Title Here</p>"
    },
    {
      "type": "number",
      "id": "count",
      "label": "Count",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Separator: Heading",
      "category": "Separator",
      "blocks": [
        {
          "type": "x-separator-description",
          "id": "a",
          "static": true
        },
        {
          "type": "x-separator-description",
          "id": "b",
          "static": true
        }
      ]
    }
  ]
}
{% endschema %}
